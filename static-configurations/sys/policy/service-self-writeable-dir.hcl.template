{% set prefixes = ["svc", "app", "api"] %}
{% set name_paths = [
    "services/secrets/%s/writeable/*",
]
%}

{% for path in name_paths %}
{% for prefix in prefixes %}
path "{{path % (prefix + "-{{identity.entity.name}}")}}" {
    capabilities = ["read", "list", "update", "delete", "create"]
}
{%- endfor %}
{%- endfor %}

